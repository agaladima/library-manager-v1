extends ../layout

block content
  include ../includes/navigation

  body
    h1 New Book
    form(action="/new_book" method="post")
      p
        label(for="title") Title
        input(id="title" type="text" name="title" value=books.title)
      p
        label(for="author") Author
        input(id="author" type="text" name="author" value=books.author) 
      p
        label(for="genre") Genre
        input(id="genre" type="text" name="genre" value=books.genre) 
      p
        label(for="first_published") First Published
        input(id="first_published" type="text" name="first_published" value=books.first_published) 
      p
        input(type="submit" value="Create New Book")