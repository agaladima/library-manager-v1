extends ../layout 

block content
  include ../includes/navigation 

  body
    h1 Patron: #{head_title}
    form(action="")
      p
        label(for="first_name") First Name
        input(id="first_name" type="text" value="Andrew")
      p
        label(for="last_name") Last Name
        input(id="last_name" type="text" value="Chalkley")
      p
        label(for="address") Address
        input(id="address" type="text" value="1234 NE 20st St")
      p
        label(for="email") Email
        input(id="email" type="text" value="andrew.chalkley@teamtreehouse.com")
      p
        label(for="library_id") Library ID
        input(id="library_id" type="text" value="MCL1001")
      p
        label(for="zip_code") Zip Code
        input(id="zip_code" type="text" value="90210")
      p
        input(type="submit"  value="Update")

    h2 Loan History
    table

      thead
        tr
          th Book
          th Patron
          th Loaned on
          th Return by
          th Returned on
          th Action

      tbody
        tr
          td
            a(href="book_detail") Harry Potter and the Goblet of Fire
          td 
            a(href="patron_detail") Andrew Chalkley
          td 2015-12-11
          td 2015-12-18
          td
          td
            a(href="return_book" class="button") Return Book

        tr
          td
            a(href="book_detail") A Brief History of Time
          td 
            a(href="patron_detail") Andrew Chalkley
          td 2015-12-12
          td 2015-12-19
          td
          td
            a(href="return_book" class="button") Return Book      