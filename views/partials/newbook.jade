extends ../layout

block content
  h1 New Book
  form(method='post')
    - if (bookTitle) {
      p
        label(for='title') Title
        input#title(type='text' name='title' value='#{bookTitle}')
    - } else {
      p
        label(for='title') Title
        input#title(type='text' name='title')
    - }
    - if (bookAuthor) {
      p
        label(for='author') Author
        input#author(type='text' name='author' value='#{bookAuthor}')
    - } else {
      p
        label(for='author') Author
        input#author(type='text' name='author')
    - }
    - if (bookGenre) {
      p
        label(for='genre') Genre
        input#genre(type='text' name='genre' value='#{bookGenre}')
    - } else {
      p
        label(for='genre') Genre
        input#genre(type='text' name='genre')
    - }
    - if (bookPublished) {
      p
        label(for='first_published') First Published
        input#first_published(type='text' name='first_published' value='#{bookPublished}')
    - } else {
      p
        label(for='first_published') First Published
        input#first_published(type='text' name='first_published')
    - }
    p
      input#button(type='submit' value='Create New Book')


  if errors
    include ./error
